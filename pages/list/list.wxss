.container {
  height: auto;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  background: rgb(243, 243, 243);
  padding-top: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list-info {
  display: flex;
  flex-direction: column;
  height: 460rpx;
  background: white;
  border-radius: 15rpx;
  width: 100%;
}

.list-header {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.list-avatar {
  width: 155rpx;
  height: 155rpx;
  background: rgb(243, 243, 243);
  border-radius: 20rpx;
  margin-left: 40rpx;
  
}

.list-name {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  margin-top: 20rpx;
  align-items: center
}

.list-item image {
  width: 40rpx;
  height: 40rpx;

}

.list-item text{
  margin-left: 30rpx;
  font-size: 16px;
}